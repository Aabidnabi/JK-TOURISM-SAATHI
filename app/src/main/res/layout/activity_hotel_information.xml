<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:orientation="vertical"
    tools:context=".Home.hotel_information">



    <androidx.cardview.widget.CardView
        android:id="@+id/budgam_hotel"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img"
            android:layout_width="83dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/budgam_hotels_logo" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  BUDGAM HOTELS"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/hotel1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img1"
            android:layout_width="83dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gulmarg_hotels_logo" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   GULMARG HOTELS"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/hotel2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img2"
            android:layout_width="83dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sonamarg_hotels_logo" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   SONAMARG  HOTELS"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/hotel3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img3"
            android:layout_width="83dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/srinagar_hotels_logo" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   SRINAGAR HOTELS"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>

</LinearLayout>