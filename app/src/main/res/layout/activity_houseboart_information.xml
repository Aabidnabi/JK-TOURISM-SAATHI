<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.houseboart_information">





    <androidx.cardview.widget.CardView
        android:id="@+id/a_category"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/houseboat_logo_a" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="‘A’ CATEGORY\nHOUSEBOATS"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/b_category"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img1"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/houseboat_logo_b" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="‘B’ CATEGORY\nHOUSEBOATS"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c_category"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img2"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/houseboat_logo_c" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:text="‘C’ CATEGORY\nHOUSEBOATS"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/d_category"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >


        <ImageView
            android:id="@+id/img3"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/houseboat_logo_d" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‘D’ CATEGORY\nHOUSEBOATS"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />



    </androidx.cardview.widget.CardView>
</LinearLayout>