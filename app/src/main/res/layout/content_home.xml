<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:id="@+id/coordinatorLayout"
app:layout_behavior="@string/appbar_scrolling_view_behavior">



<ImageView
    android:id="@+id/Emergency_sos"
    android:layout_marginTop="10dp"
    android:background="@drawable/sos23"
    android:layout_width="wrap_content"
    android:layout_height="130dp">

</ImageView>



    <RelativeLayout

        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">


                    <Button

                        android:id="@+id/hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="hotels" />

                    <Button
                        android:id="@+id/houseboart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="houseboats" />

                    <Button
                        android:id="@+id/shikarwala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="shikaras" />



                    <Button
                        android:id="@+id/Travel_Agents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="TravelAgents" />

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

</RelativeLayout>


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:id="@+id/text_id"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Hotels"
        android:textColor="#0066ff"
        android:textSize="20dp"/>

<LinearLayout
